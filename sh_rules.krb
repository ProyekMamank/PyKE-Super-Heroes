# sh_rules.krb

hero_blackwidow
    use hero_is(Black_Widow)
    when
        sh_questions.is_man(False)
        sh_questions.is_super_human(False)
        sh_questions.is_normal_human(True)

hero_scarletwitch
    use hero_is(Scarlet_Witch)
    when
        sh_questions.is_man(False)
        sh_questions.is_super_human(True)
        sh_questions.is_wear_cape(True)

hero_captainmarvel
    use hero_is(Captain_Marvel)
    when
        sh_questions.is_man(False)
        sh_questions.is_super_human(True)
        sh_questions.is_wear_cape(False)

hero_hulk
    use hero_is(Hulk)
    when
        sh_questions.is_man(True)
        sh_questions.is_super_human(True)
        sh_questions.is_wear_mask(False)

hero_ironman
    use hero_is(Iron_Man)
    when
        sh_questions.is_man(True)
        sh_questions.is_super_human(False)
        sh_questions.is_normal_human(True)
        sh_questions.is_able_to_fly(True)

hero_thor
    use hero_is(Thor)
    when
        sh_questions.is_man(True)
        sh_questions.is_super_human(False)
        sh_questions.is_normal_human(False)

hero_blackpanther
    use hero_is(Black_Panther)
    when
        sh_questions.is_man(True)
        sh_questions.is_super_human(True)
        sh_questions.is_wear_mask(True)
		
hero_antman
    use hero_is(Ant_Man)
    when
        sh_questions.is_man(True)
        sh_questions.is_super_human(False)
        sh_questions.is_normal_human(True)
        sh_questions.is_able_to_fly(False)
